/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdbool.h>
#include <stdio.h>
#include <unistd.h>
#include "platform.h"
#include "xil_printf.h"

#include "xparameters.h"
#include "xiic.h"
#include "xil_printf.h"

const int MPU=0x68;


u8 MPU_intialization[] = {0x6B,0};
u8 MPU_read [] = {0x3B};


int main()
{
	unsigned int result;

    init_platform();

    result = XIic_Send(XPAR_IIC_0_BASEADDR, MPU, (u8*)&MPU_intialization, 2, XIIC_STOP);

    print("Hello World\n\r");
    print("Successfully ran Hello World application");

    u8 Databuffer[14];
    while(1){
    	result = XIic_Send(XPAR_IIC_0_BASEADDR, MPU, (u8*)&MPU_read, 1, XIIC_REPEATED_START);
    	result = XIic_Recv(XPAR_IIC_0_BASEADDR, MPU, (u8*)Databuffer, 14, XIIC_STOP);
    	printf("1: %i",Databuffer[0]);
    	sleep(1);
    }


    cleanup_platform();
    return 0;
}
